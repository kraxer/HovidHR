@model HovidHR.Models.UserViewModel
@{
    ViewData["Title"] = "Manage User";
}


<style>
    .edit-tr {
        background: #e6ccff;
        color: black;
    }
</style>



<div class="container">
    <div class="card">
        <div class="card-title card-header card-header-primary ">
            <h4>Create User</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="UserName" class="control-label"></label>
                                <input asp-for="UserName" class="form-control" maxlength="10" required />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="UserNo" class="control-label"></label>
                                <input asp-for="UserNo" class="form-control" maxlength="10" required />
                                <span asp-validation-for="UserNo" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <div class="row pt-1">
                <div class="col-md-12">
                    <input type="button" value="Create" class="btn btn-primary" onclick="CreateUser();" />
                </div>
            </div>
        </div>

    </div>

    <div class="table-responsive pt-2">
        <table id="userTable" class="table table-bordered">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>User Name</th>
                    <th>User No</th>
                    <th>Created Date</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

    
</div>


@section JavaScriptIncludes
{
    
	<script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

	<script type="text/javascript" src="@Url.Content("~/js/user.js")"></script>


}